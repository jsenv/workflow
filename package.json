{
  "name": "@jsenv/workflow",
  "version": "0.0.1",
  "private": true,
  "description": "Scripts to use during automated workflows",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsenv/workflow"
  },
  "workspaces": [
    "./packages/*"
  ],
  "exports": {
    "./*": "./*"
  },
  "scripts": {
    "eslint": "npx eslint . --ext=.js,.mjs && npm run eslint --workspaces --if-present",
    "importmap": "node ./script/importmap/importmap.mjs && npm run importmap --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test-with-coverage": "npm run test-with-coverage --workspaces --if-present",
    "workspace-versions": "node ./script/publish/workspace_versions.mjs",
    "workspace-publish": "node ./script/publish/workspace_publish.mjs",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@jsenv/filesystem": "2.7.1",
    "@jsenv/importmap-node-module": "5.1.3",
    "@jsenv/log": "1.5.0",
    "eslint": "8.7.0",
    "eslint-plugin-import": "2.25.4",
    "prettier": "2.5.1"
  }
}
