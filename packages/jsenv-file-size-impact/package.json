{
  "name": "@jsenv/file-size-impact",
  "version": "12.1.12",
  "description": "Add files size impact into pull requests",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jsenv/workflow",
    "directory": "packages/jsenv-file-size-impact"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./main.js"
    },
    "./*": "./*"
  },
  "main": "./main.js",
  "files": [
    "/src/",
    "/main.js"
  ],
  "scripts": {
    "eslint": "npx eslint . --ext=.js,.mjs",
    "snapshot": "node ./test/comment/generate_comment_snapshot_file.mjs",
    "test": "node ./script/test/test.mjs",
    "test-with-coverage": "npm run test -- --coverage",
    "file-size": "node ./script/file_size/file_size.mjs --log",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@jsenv/dynamic-import-worker": "1.0.1",
    "@jsenv/filesystem": "3.1.0",
    "@jsenv/github-pull-request-impact": "1.6.11",
    "@jsenv/logger": "4.0.1",
    "pretty-bytes": "6.0.0"
  }
}
